<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <!-- Wrapper -->
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="" id="sidebar-wrapper">
            <div class="sidebar-heading">WeSound</div>
            <div class="list-group list-group-flush border-0">
                <a href="#" class="list-group-item list-group-item-action border-0 rounded active">
                    <i class="fas fa-home"></i>&nbsp;Home
                </a>
                <a href="#" class="list-group-item list-group-item-action border-0 rounded">
                    <i class="fas fa-search"></i>&nbsp;Search
                </a>
                <!-- if authenticated -->
                <!-- <a href="#" class="list-group-item list-group-item-action border-0 rounded"><i
                class="fas fa-headphones-alt"></i>&nbsp;Your Library</a> -->
                <!-- /if authenticated -->
                <!-- if not authenticated -->
                <a href="#" class="list-group-item list-group-item-action border-0 rounded" data-toggle="modal"
                   data-target="#requireLoginModal"><i class="fas fa-headphones-alt"></i>&nbsp;Your Library</a>
                <!-- /if not authenticated -->
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg">
                <button class="btn btn-primary" id="menu-toggle"><i class="far fa-play-circle"></i></button>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    @*<div class="rounded-pill ml-3" id="search">
                            <span class="input-group-append text-dark mt-3 ml-3">
                                <i class="fa fa-search"></i>
                            </span>
                            <input id="searchbar" type="search" class="form-control form-control-sm ml-5 mt-n4 border-0"
                                   placeholder="Search for Artists, Songs or Podcast ">
                        </div>*@
                    @Html.Partial("_LoginPartial")
                </div>
            </nav>
            @RenderBody()
            <div class="col-md-12 fixed-bottom text-center" id="now-playing-bar">
                <div class="player-control">
                    <div class="control-button-wrapper">
                        <i class="fas fa-random"></i>
                        <i class="fas fa-step-backward"></i>
                        <i class="far fa-play-circle" id="play-button"></i>
                        <i class="fas fa-step-forward"></i>
                        <i class="fas fa-redo"></i>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Page Content Wrapper-->
    </div>
    <!-- /Wrapper-->
    <!--/ Require Login Modal -->
    <div id="requireLoginModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content bg-primary">
                <div class="modal-body">
                    <div class="row text-light">
                        <div class="col-md-6">
                            <h2>Get your free WeSound account</h2>
                            <ul>
                                <li>
                                    <i class="fas fa-check"></i>
                                    No credit card
                                </li>
                                <li>
                                    <i class="fas fa-check"></i>
                                    Share your songs
                                </li>
                                <li>
                                    <i class="fas fa-check"></i>
                                    Discover new music
                                </li>
                            </ul>
                            <a class="text-light" href="#" data-toggle="modal" data-dismiss="modal">CLOSE</a>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light border-0 shadow">
                                <div class="card-body">

                                    <button class="btn btn-success rounded-pill w-80 mx-auto d-block" data-toggle="modal"
                                            data-dismiss="modal" data-target="#registerModal">
                                        SIGN UP FREE
                                    </button>
                                    <hr>
                                    <div class="row">
                                        <p class="text-dark text-center">Don't have an account?</p>
                                        <a class="btn btn-secondary rounded-pill w-80 mx-auto d-block" href="@Url.Action("Login", "Account")">Login</a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/ Require Login Modal -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
        $('.list-group-item').on('click', function () {
            $(this).addClass('active').siblings().removeClass('active')
        })
    </script>
</body>
</html>
